<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error">
    <h2 class="error-message">
      <%= pluralize(@book.errors.count,"error") %> prohibited this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book, method: :patch do |f| %>
  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label><br>
    <%= f. text_area :body %>
  </div>
  <div>
    <%= f.submit ' Update Book ' %>
  </div>
  <div class="actions">
    <%= link_to 'Show', book_path(@book.id) %>
    &#124
    <%= link_to 'Back', '/books' %>
  </div>
<% end %>
